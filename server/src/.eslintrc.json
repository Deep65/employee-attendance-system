{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "func-names": "off",
    "no-unused-vars": "warn",
    "no-undef": "error",
    "consistent-return": "off",
    "import/no-extraneous-dependencies": "off",
    "no-underscore-dangle": "off",
    "no-plusplus": "off",
    "no-mixed-spaces-and-tabs": "error",
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "always-multiline"],
    "no-var": "error",
    "arrow-parens": ["error", "always"],
    "prefer-const": "error",
    "eqeqeq": "error",
    "no-else-return": "error",
    "no-multi-spaces": "error"
  }
}