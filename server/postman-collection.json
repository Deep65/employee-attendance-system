{
  "info": {
    "name": "Employee Attendance System API",
    "description": "API collection for Employee Leave & Attendance Management System",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{jwt_token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:4000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@company.com\",\n  \"password\": \"password123\",\n  \"role\": \"employee\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login User",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('jwt_token', response.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@company.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        }
      ]
    },
    {
      "name": "Attendance",
      "item": [
        {
          "name": "Check In",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/attendance/check-in",
              "host": ["{{base_url}}"],
              "path": ["attendance", "check-in"]
            }
          }
        },
        {
          "name": "Check Out",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/attendance/check-out",
              "host": ["{{base_url}}"],
              "path": ["attendance", "check-out"]
            }
          }
        },
        {
          "name": "Get Today's Attendance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/attendance/today",
              "host": ["{{base_url}}"],
              "path": ["attendance", "today"]
            }
          }
        },
        {
          "name": "Get My Attendance",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/attendance/my-attendance?month=2&year=2024",
              "host": ["{{base_url}}"],
              "path": ["attendance", "my-attendance"],
              "query": [
                {
                  "key": "month",
                  "value": "2"
                },
                {
                  "key": "year",
                  "value": "2024"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Leave Management",
      "item": [
        {
          "name": "Apply for Leave",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"startDate\": \"2024-03-01\",\n  \"endDate\": \"2024-03-03\",\n  \"leaveType\": \"vacation\",\n  \"reason\": \"Family vacation\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/leaves/apply",
              "host": ["{{base_url}}"],
              "path": ["leaves", "apply"]
            }
          }
        },
        {
          "name": "Get My Leaves",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/leaves/my-leaves",
              "host": ["{{base_url}}"],
              "path": ["leaves", "my-leaves"]
            }
          }
        },
        {
          "name": "Get All Leaves (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/leaves/all",
              "host": ["{{base_url}}"],
              "path": ["leaves", "all"]
            }
          }
        },
        {
          "name": "Approve Leave (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/leaves/:leaveId/approve",
              "host": ["{{base_url}}"],
              "path": ["leaves", ":leaveId", "approve"],
              "variable": [
                {
                  "key": "leaveId",
                  "value": "LEAVE_ID_HERE"
                }
              ]
            }
          }
        },
        {
          "name": "Reject Leave (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rejectionReason\": \"Insufficient leave balance\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/leaves/:leaveId/reject",
              "host": ["{{base_url}}"],
              "path": ["leaves", ":leaveId", "reject"],
              "variable": [
                {
                  "key": "leaveId",
                  "value": "LEAVE_ID_HERE"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Dashboard",
      "item": [
        {
          "name": "Admin Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/dashboard/admin",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "admin"]
            }
          }
        },
        {
          "name": "Employee Dashboard",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/dashboard/employee",
              "host": ["{{base_url}}"],
              "path": ["dashboard", "employee"]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    }
  ]
}

